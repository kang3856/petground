<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource 
		name="oraclexe"
		auth="Container"
		driverClassName="oracle.jdbc.OracleDriver"
		url="jdbc:oracle:thin:@localhost:1521:xe"	
		username="petground"
		password="1111"
		type="javax.sql.DataSource"
		maxIdle="20"
		maxTotal="20"
		maxWaitMillis="-1"
	/>
	
	<!-- 
		ConnectionPool은 개념
		자바에서는 DateSource객체가 구현
		maxIdle : 커넥션의 기본갯수
		maxTotal : 커넥션의 최대갯수
		maxWaitMillis : 최대 기다리는 시간(-1이면 무한대)
	 -->

</Context>





